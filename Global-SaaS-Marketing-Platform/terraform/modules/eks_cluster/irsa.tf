################################################################################
# Application IRSA Role (Generic)
################################################################################

resource "aws_iam_role" "application" {
  for_each = var.application_irsa_roles

  name = "${local.cluster_name}-${each.key}"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [{
      Action = "sts:AssumeRoleWithWebIdentity"
      Effect = "Allow"
      Principal = {
        Federated = local.oidc_provider_arn
      }
      Condition = {
        StringEquals = {
          "${local.oidc_provider_url}:aud" = "sts.amazonaws.com"
          "${local.oidc_provider_url}:sub" = "system:serviceaccount:${each.value.namespace}:${each.value.service_account}"
        }
      }
    }]
  })

  tags = merge(local.common_tags, {
    ServiceAccount = each.value.service_account
    Namespace      = each.value.namespace
  })
}

resource "aws_iam_role_policy" "application" {
  for_each = var.application_irsa_roles

  name   = "${local.cluster_name}-${each.key}-policy"
  role   = aws_iam_role.application[each.key].id
  policy = each.value.policy_json
}
