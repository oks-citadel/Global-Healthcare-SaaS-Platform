# Application
NODE_ENV=development
PORT=3005
API_PREFIX=api/v1

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/lifecycle_db?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_EMAIL=noreply@example.com
SES_FROM_NAME=Marketing Platform
SES_CONFIGURATION_SET=

# Email Settings
EMAIL_BATCH_SIZE=100
EMAIL_RATE_LIMIT_PER_SECOND=14

# JWT (for service-to-service auth)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600

# Webhook Settings
WEBHOOK_SECRET=your-webhook-secret

# Flow Execution
FLOW_MAX_WAIT_DAYS=365
FLOW_EXECUTION_TIMEOUT_MS=30000
