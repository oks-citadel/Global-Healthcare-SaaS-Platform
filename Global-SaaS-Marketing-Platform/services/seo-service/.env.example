# ================================
# SEO Service Environment Variables
# ================================

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/seo_service

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=seo:

# Cache TTL (seconds)
REDIS_TTL_SITEMAP=3600
REDIS_TTL_ROBOTS=86400
REDIS_TTL_MANIFEST=86400
REDIS_TTL_PAGE_SEO=1800
REDIS_TTL_WEB_VITALS=3600

# Crawler
CRAWLER_MAX_CONCURRENCY=5
CRAWLER_MAX_REQUESTS=100
CRAWLER_REQUEST_TIMEOUT=30000
CRAWLER_NAVIGATION_TIMEOUT=60000
CRAWLER_USER_AGENT=MarketingPlatformBot/1.0 (+https://example.com/bot)
CRAWLER_RESPECT_ROBOTS=true

# SEO Configuration
SEO_DEFAULT_LOCALE=en
SEO_SUPPORTED_LOCALES=en,es,fr,de,ja,zh
SEO_SITEMAP_MAX_URLS=50000
SEO_AUDIT_MAX_PAGES=1000
SEO_CONTENT_FRESHNESS_DAYS=90

# External APIs (optional)
GOOGLE_SEARCH_CONSOLE_API_KEY=
GOOGLE_PAGESPEED_API_KEY=
SEMRUSH_API_KEY=
AHREFS_API_KEY=
