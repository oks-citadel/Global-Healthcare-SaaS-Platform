# ============================================================================
# Community Service - Environment Configuration
# ============================================================================

# Application
NODE_ENV=development
PORT=3011
HOST=0.0.0.0
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/community_service

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=community:

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT (for token validation)
JWT_SECRET=your-jwt-secret-key

# Content Moderation
MODERATION_AUTO_FLAG_THRESHOLD=0.7
MODERATION_AUTO_REMOVE_THRESHOLD=0.9

# Sentiment Analysis
SENTIMENT_ENABLED=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
