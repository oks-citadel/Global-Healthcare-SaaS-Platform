# Application
NODE_ENV=development
PORT=3004
API_PREFIX=api/v1

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/growth_db?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_EMAIL=noreply@example.com

# AWS S3
S3_BUCKET=growth-assets
S3_REGION=us-east-1

# JWT (for service-to-service auth)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600

# Referral Settings
REFERRAL_CODE_LENGTH=8
REFERRAL_REWARD_AMOUNT=10
REFERRAL_REWARD_CURRENCY=USD

# A/B Testing
AB_TEST_MIN_SAMPLE_SIZE=100
AB_TEST_CONFIDENCE_LEVEL=0.95
