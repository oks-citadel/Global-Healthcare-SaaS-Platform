{
  "name": "global-saas-marketing-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Self-advertising global SaaS marketing platform - AWS EKS Native",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rimraf node_modules",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "docker:build": "turbo run docker:build",
    "k8s:deploy:dev": "helm upgrade --install marketing-platform ./terraform/helm/charts -f ./terraform/helm/values/dev.yaml -n marketing-dev",
    "k8s:deploy:staging": "helm upgrade --install marketing-platform ./terraform/helm/charts -f ./terraform/helm/values/staging.yaml -n marketing-staging",
    "k8s:deploy:prod": "helm upgrade --install marketing-platform ./terraform/helm/charts -f ./terraform/helm/values/prod.yaml -n marketing-prod",
    "tf:init": "cd terraform/environments/dev && terraform init",
    "tf:plan": "cd terraform/environments/dev && terraform plan",
    "tf:apply": "cd terraform/environments/dev && terraform apply",
    "seo:audit": "pnpm --filter @marketing/seo-service run audit",
    "seo:crawl": "pnpm --filter @marketing/seo-service run crawl",
    "analytics:validate": "pnpm --filter @marketing/analytics-service run validate"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
