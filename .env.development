# ============================================
# UnifiedHealth Platform - Development Environment
# ============================================
# Safe development defaults - DO NOT use in production
# Copy to .env for local development

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=1.0.0

# ============================================
# SERVER
# ============================================
PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_MAX=100

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/unified_health_dev

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# RATE LIMITING (Redis-backed for distributed systems)
# ============================================
RATE_LIMIT_REDIS_ENABLED=false

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=development-jwt-secret-change-me-min-32-characters-long
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=dev-encryption-key-32-bytes-here

# ============================================
# AWS (Development - Use LocalStack or leave empty)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=development-access-key-change-me
AWS_SECRET_ACCESS_KEY=development-secret-key-change-me
AWS_S3_BUCKET=unified-health-storage-dev
AWS_S3_REGION=us-east-1

# ============================================
# STRIPE (Test Mode)
# ============================================
STRIPE_SECRET_KEY=sk_test_development_secret_change_me
STRIPE_WEBHOOK_SECRET=whsec_development_webhook_change_me
STRIPE_PUBLISHABLE_KEY=pk_test_development_publishable_change_me

# ============================================
# TWILIO (Test Credentials)
# ============================================
TWILIO_ACCOUNT_SID=development_twilio_sid_change_me
TWILIO_AUTH_TOKEN=development_twilio_token_change_me
TWILIO_API_KEY=development_twilio_api_key_change_me
TWILIO_API_SECRET=development_twilio_api_secret_change_me

# ============================================
# SENDGRID (Development)
# ============================================
SENDGRID_API_KEY=SG.development_sendgrid_key_change_me
SENDGRID_FROM_EMAIL=noreply@localhost

# ============================================
# AI/ML SERVICES (Development)
# ============================================
ANTHROPIC_API_KEY=development_anthropic_key_change_me
OPENAI_API_KEY=development_openai_key_change_me

# ============================================
# FHIR SERVER
# ============================================
FHIR_SERVER_URL=http://localhost:8082/fhir
FHIR_SERVER_VERSION=R4
