# Test Environment Configuration
# Copy this file to .env.test and fill in the values

# ===========================================
# API Configuration
# ===========================================
TEST_API_URL=http://localhost:3001/api/v1
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/unified_health_test

# JWT Secrets (for test environment only)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-only

# ===========================================
# UI Test Configuration
# ===========================================
TEST_BASE_URL=http://localhost:3000
WEB_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
PROVIDER_URL=http://localhost:3002
KIOSK_URL=http://localhost:3003

# ===========================================
# Test User Credentials
# ===========================================
TEST_PATIENT_EMAIL=patient@test.unified.health
TEST_PATIENT_PASSWORD=TestPassword123!

TEST_PATIENT2_EMAIL=patient2@test.unified.health
TEST_PATIENT2_PASSWORD=TestPassword123!

TEST_PROVIDER_EMAIL=provider@test.unified.health
TEST_PROVIDER_PASSWORD=TestPassword123!

TEST_ADMIN_EMAIL=admin@test.unified.health
TEST_ADMIN_PASSWORD=TestPassword123!

# ===========================================
# Performance Test Configuration (k6)
# ===========================================
K6_API_URL=http://localhost:3001/api/v1
K6_VUS=10
K6_DURATION=30s

# ===========================================
# CI/CD Configuration
# ===========================================
CI=false
HEADLESS=true

# ===========================================
# Reporting
# ===========================================
ALLURE_RESULTS_DIR=./reports/allure-results
PLAYWRIGHT_REPORT_DIR=./reports/ui/html
SCREENSHOT_DIR=./reports/screenshots
VIDEO_DIR=./reports/videos

# ===========================================
# Timeouts (milliseconds)
# ===========================================
TEST_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
API_TIMEOUT=10000

# ===========================================
# Parallelism
# ===========================================
PLAYWRIGHT_WORKERS=4
VITEST_MAX_THREADS=4

# ===========================================
# Feature Flags for Tests
# ===========================================
ENABLE_TELEHEALTH_TESTS=true
ENABLE_VISUAL_REGRESSION=true
ENABLE_A11Y_TESTS=true
ENABLE_MOBILE_TESTS=false

# ===========================================
# External Services (mock in tests)
# ===========================================
STRIPE_TEST_KEY=sk_test_mock
TWILIO_TEST_SID=mock_sid
SENDGRID_TEST_KEY=mock_key
