{
  "dashboard": {
    "title": "Unified Health - Database Metrics",
    "description": "Comprehensive database performance and health monitoring",
    "tags": ["unified-health", "database", "postgres", "performance"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Database Status",
        "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
        "targets": [
          {
            "expr": "up{job=\"postgres-exporter\"}",
            "legendFormat": "Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "value": 0, "text": "DOWN", "color": "red" },
              { "value": 1, "text": "UP", "color": "green" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value"
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Active Connections",
        "gridPos": { "x": 4, "y": 0, "w": 5, "h": 4 },
        "targets": [
          {
            "expr": "db_connection_pool_active",
            "legendFormat": "Active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 80, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Query P95 Latency",
        "gridPos": { "x": 9, "y": 0, "w": 5, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 500, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Query P99 Latency",
        "gridPos": { "x": 14, "y": 0, "w": 5, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(db_query_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P99",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 200, "color": "yellow" },
                { "value": 1000, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Waiting Connections",
        "gridPos": { "x": 19, "y": 0, "w": 5, "h": 4 },
        "targets": [
          {
            "expr": "db_connection_pool_waiting",
            "legendFormat": "Waiting",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 5, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Connection Pool Status",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "db_connection_pool_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "db_connection_pool_idle",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "db_connection_pool_waiting",
            "legendFormat": "Waiting",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "Query Duration Percentiles",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(db_query_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(db_query_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Query Rate by Operation",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(db_query_duration_seconds_count[5m])) by (operation)",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "qps",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "normal"
              }
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["mean", "last", "max"]
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Query Duration by Table",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(db_query_duration_seconds_sum[5m])) by (table) / sum(rate(db_query_duration_seconds_count[5m])) by (table) * 1000",
            "legendFormat": "{{table}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["mean", "last"]
          }
        }
      },
      {
        "id": 10,
        "type": "table",
        "title": "Slowest Queries (Top 10)",
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, sum by (operation, table) (rate(db_query_duration_seconds_sum[5m])) / sum by (operation, table) (rate(db_query_duration_seconds_count[5m]))) * 1000",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Value" },
              "properties": [
                { "id": "displayName", "value": "Avg Duration (ms)" },
                { "id": "unit", "value": "ms" },
                { "id": "decimals", "value": 2 },
                { "id": "custom.displayMode", "value": "color-background" },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "value": 0, "color": "green" },
                      { "value": 100, "color": "yellow" },
                      { "value": 500, "color": "red" }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "type": "table",
        "title": "Most Frequent Queries",
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, sum by (operation, table) (rate(db_query_duration_seconds_count[5m])) * 60)",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Value" },
              "properties": [
                { "id": "displayName", "value": "Queries/min" },
                { "id": "decimals", "value": 2 },
                { "id": "custom.displayMode", "value": "gradient-gauge" }
              ]
            }
          ]
        }
      },
      {
        "id": 12,
        "type": "gauge",
        "title": "Connection Pool Utilization",
        "gridPos": { "x": 0, "y": 28, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "(db_connection_pool_active / (db_connection_pool_active + db_connection_pool_idle)) * 100",
            "legendFormat": "Utilization %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 13,
        "type": "stat",
        "title": "Total Queries (Last Hour)",
        "gridPos": { "x": 6, "y": 28, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "sum(increase(db_query_duration_seconds_count[1h]))",
            "legendFormat": "Queries",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 14,
        "type": "stat",
        "title": "Failed Queries (Last Hour)",
        "gridPos": { "x": 12, "y": 28, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "sum(increase(db_query_duration_seconds_count{status=\"error\"}[1h]))",
            "legendFormat": "Failed",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 15,
        "type": "stat",
        "title": "Query Error Rate",
        "gridPos": { "x": 18, "y": 28, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "sum(rate(db_query_duration_seconds_count{status=\"error\"}[5m])) / sum(rate(db_query_duration_seconds_count[5m])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.1, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\",component=\"database\"}",
          "iconColor": "red",
          "name": "Database Alerts",
          "step": "60s",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
