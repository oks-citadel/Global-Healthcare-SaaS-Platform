{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "cwagent",
    "region": "${AWS_REGION}",
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
    "debug": false
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/unified-health/api/*.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/api",
            "log_stream_name": "{instance_id}-api",
            "retention_in_days": 30,
            "timezone": "UTC",
            "multi_line_start_pattern": "{",
            "encoding": "utf-8"
          },
          {
            "file_path": "/var/log/unified-health/imaging-service/*.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/imaging-service",
            "log_stream_name": "{instance_id}-imaging",
            "retention_in_days": 30,
            "timezone": "UTC",
            "multi_line_start_pattern": "{",
            "encoding": "utf-8"
          },
          {
            "file_path": "/var/log/unified-health/notification-service/*.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/notification-service",
            "log_stream_name": "{instance_id}-notification",
            "retention_in_days": 30,
            "timezone": "UTC",
            "multi_line_start_pattern": "{",
            "encoding": "utf-8"
          },
          {
            "file_path": "/var/log/unified-health/laboratory-service/*.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/laboratory-service",
            "log_stream_name": "{instance_id}-laboratory",
            "retention_in_days": 30,
            "timezone": "UTC",
            "multi_line_start_pattern": "{",
            "encoding": "utf-8"
          },
          {
            "file_path": "/var/log/unified-health/telehealth-service/*.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/telehealth-service",
            "log_stream_name": "{instance_id}-telehealth",
            "retention_in_days": 30,
            "timezone": "UTC",
            "multi_line_start_pattern": "{",
            "encoding": "utf-8"
          },
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/nginx-access",
            "log_stream_name": "{instance_id}-nginx-access",
            "retention_in_days": 14,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "/unified-health/${ENVIRONMENT}/nginx-error",
            "log_stream_name": "{instance_id}-nginx-error",
            "retention_in_days": 30,
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "default",
    "force_flush_interval": 5
  },
  "metrics": {
    "namespace": "UnifiedHealth",
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_user",
          "cpu_usage_system",
          "cpu_usage_steal"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": true,
        "resources": ["*"]
      },
      "disk": {
        "measurement": [
          "used_percent",
          "inodes_free",
          "inodes_used",
          "inodes_total"
        ],
        "metrics_collection_interval": 60,
        "resources": ["*"],
        "ignore_file_system_types": ["sysfs", "devtmpfs", "tmpfs", "overlay"]
      },
      "diskio": {
        "measurement": [
          "io_time",
          "write_bytes",
          "read_bytes",
          "writes",
          "reads"
        ],
        "metrics_collection_interval": 60,
        "resources": ["*"]
      },
      "mem": {
        "measurement": [
          "mem_used_percent",
          "mem_available",
          "mem_total",
          "mem_used",
          "mem_cached",
          "mem_buffered"
        ],
        "metrics_collection_interval": 60
      },
      "netstat": {
        "measurement": [
          "tcp_established",
          "tcp_time_wait",
          "tcp_close_wait",
          "tcp_syn_sent"
        ],
        "metrics_collection_interval": 60
      },
      "net": {
        "measurement": [
          "bytes_sent",
          "bytes_recv",
          "packets_sent",
          "packets_recv",
          "drop_in",
          "drop_out",
          "err_in",
          "err_out"
        ],
        "metrics_collection_interval": 60,
        "resources": ["eth0", "ens5"]
      },
      "processes": {
        "measurement": [
          "running",
          "sleeping",
          "dead",
          "zombies",
          "blocked",
          "total"
        ],
        "metrics_collection_interval": 60
      },
      "swap": {
        "measurement": [
          "swap_used_percent",
          "swap_used",
          "swap_free"
        ],
        "metrics_collection_interval": 60
      },
      "statsd": {
        "service_address": ":8125",
        "metrics_collection_interval": 60,
        "metrics_aggregation_interval": 60
      },
      "procstat": [
        {
          "pattern": "node.*unified-health",
          "measurement": [
            "cpu_usage",
            "memory_rss",
            "memory_vms",
            "read_bytes",
            "write_bytes",
            "num_threads",
            "pid_count"
          ]
        },
        {
          "pattern": "nginx",
          "measurement": [
            "cpu_usage",
            "memory_rss",
            "num_threads",
            "pid_count"
          ]
        },
        {
          "pattern": "postgres",
          "measurement": [
            "cpu_usage",
            "memory_rss",
            "memory_vms",
            "num_threads"
          ]
        },
        {
          "pattern": "redis",
          "measurement": [
            "cpu_usage",
            "memory_rss",
            "num_threads"
          ]
        }
      ]
    },
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "Environment": "${ENVIRONMENT}",
      "Service": "unified-health"
    },
    "aggregation_dimensions": [
      ["InstanceId"],
      ["AutoScalingGroupName"],
      ["Environment"],
      ["Service"],
      ["InstanceType", "Environment"]
    ]
  },
  "traces": {
    "traces_collected": {
      "xray": {
        "bind_address": "127.0.0.1:2000",
        "tcp_proxy": {
          "bind_address": "127.0.0.1:2000"
        }
      },
      "otlp": {
        "grpc_endpoint": "127.0.0.1:4317",
        "http_endpoint": "127.0.0.1:4318"
      }
    }
  },
  "csm": {
    "service_addresses": ["udp4://127.0.0.1:31000", "udp6://[::1]:31000"],
    "memory_limit_in_mb": 20
  }
}
