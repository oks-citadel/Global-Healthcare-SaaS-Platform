# ============================================
# UnifiedHealth Platform - Production Environment
# Azure Deployment Configuration
# ============================================

# Azure Container Registry
ACR_NAME=unifiedhealthacr
ACR_REGISTRY=${ACR_NAME}.azurecr.io
RESOURCE_GROUP=unifiedhealth-rg
LOCATION=eastus

# Image Tags
IMAGE_TAG=latest

# Database Configuration
DATABASE_URL=postgresql://unifiedhealth_admin:${DB_PASSWORD}@unifiedhealth-prod-postgres.postgres.database.azure.com:5432/unifiedhealth?sslmode=require

# Redis Configuration
REDIS_HOST=unifiedhealth-prod-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=${REDIS_KEY}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Firebase Cloud Messaging
FCM_SERVER_KEY=${FCM_SERVER_KEY}
FCM_SENDER_ID=${FCM_SENDER_ID}

# Apple Push Notifications
APNS_KEY_ID=${APNS_KEY_ID}
APNS_TEAM_ID=${APNS_TEAM_ID}
APNS_BUNDLE_ID=com.unifiedhealth.app
APNS_PRODUCTION=true

# Twilio Configuration
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Anthropic AI
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Stripe Payments
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Application URLs
APP_URL=https://unifiedhealth.com
NEXT_PUBLIC_API_URL=https://api.unifiedhealth.com
NEXT_PUBLIC_APP_URL=https://unifiedhealth.com
CORS_ORIGINS=https://unifiedhealth.com,https://admin.unifiedhealth.com

# Firebase Web Config
NEXT_PUBLIC_FIREBASE_API_KEY=${FIREBASE_API_KEY}
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=unifiedhealth.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=unifiedhealth
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=${FCM_SENDER_ID}
NEXT_PUBLIC_FIREBASE_APP_ID=${FIREBASE_APP_ID}
NEXT_PUBLIC_FIREBASE_VAPID_KEY=${VAPID_PUBLIC_KEY}

