# ============================================
# Development Environment Backend Configuration
# ============================================
# AWS S3 backend for Terraform state management
# Enables state locking via DynamoDB, versioning, and team collaboration
#
# Usage: terraform init -backend-config=environments/dev.tfbackend

# S3 Bucket Configuration
# Replace these values with your actual S3 bucket details
bucket         = "unified-health-terraform-state-dev-placeholder"
key            = "env/dev/terraform.tfstate"
region         = "us-east-1"

# Encryption
encrypt        = true

# DynamoDB table for state locking
# Prevents concurrent modifications to the state
dynamodb_table = "unified-health-terraform-locks-dev"

# Optional: Use KMS key for additional encryption
# kms_key_id   = "alias/unified-health-terraform-dev"

# Optional: Enable assume role for cross-account access
# role_arn     = "arn:aws:iam::ACCOUNT_ID:role/TerraformStateAccess"
