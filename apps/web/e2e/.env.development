# ==========================================
# E2E Tests - Development Environment
# ==========================================
# Safe development defaults for Playwright tests

# Base URL for the application
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Test user credentials
TEST_USER_EMAIL=testuser@localhost
TEST_USER_PASSWORD=TestPassword123!

# API base URL
API_BASE_URL=http://localhost:4000

# Storage state path for authenticated tests
STORAGE_STATE=.auth/user.json

# CI mode
CI=false

# Playwright options
HEADLESS=false
SLOWMO=0

# Screenshot options
SCREENSHOT_ON_FAILURE=true

# Video recording
VIDEO_ON_FAILURE=true

# Test timeouts (in milliseconds)
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=5000
NAVIGATION_TIMEOUT=15000

# Retry settings
RETRIES=0

# Browser settings
BROWSERS=chromium

# Test data
TEST_DATA_SEED=true
