# Playwright E2E Test Environment Variables

# Base URL for the application
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Test user credentials (if using real backend)
TEST_USER_EMAIL=patient1@test.com
TEST_USER_PASSWORD=Test@1234

# API base URL (if different from web app)
API_BASE_URL=http://localhost:4000

# Storage state path for authenticated tests
STORAGE_STATE=.auth/user.json

# CI mode
CI=false

# Playwright options
HEADLESS=false
SLOWMO=0

# Screenshot options
SCREENSHOT_ON_FAILURE=true

# Video recording
VIDEO_ON_FAILURE=true

# Test timeouts (in milliseconds)
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=5000
NAVIGATION_TIMEOUT=15000

# Retry settings
RETRIES=0

# Browser settings
BROWSERS=chromium,firefox,webkit

# Test data
TEST_DATA_SEED=true
