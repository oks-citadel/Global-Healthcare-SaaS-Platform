# ============================================
# UnifiedHealth Platform Environment Variables
# ============================================
# Copy this file to .env and fill in values
# NEVER commit .env to version control

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=1.0.0

# ============================================
# SERVER
# ============================================
PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_MAX=100

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://unified_health:password@localhost:5432/unified_health_dev

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# RATE LIMITING (Redis-backed for distributed systems)
# ============================================
# Enable Redis-backed rate limiting (defaults to true in production)
RATE_LIMIT_REDIS_ENABLED=false
# Rate limit Redis prefix (default: rl:)
# RATE_LIMIT_REDIS_PREFIX=rl:

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# ============================================
# AWS (Production)
# ============================================
# AWS_ACCOUNT_ID=your-aws-account-id
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_SECRETS_MANAGER_REGION=us-east-1

# ============================================
# STRIPE (Billing)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ============================================
# AWS SES (Email)
# ============================================
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@unifiedhealth.io
AWS_SES_FROM_NAME=The Unified Health
# AWS_SES_ACCESS_KEY_ID=your_ses_access_key (optional, uses default AWS credentials if not set)
# AWS_SES_SECRET_ACCESS_KEY=your_ses_secret_key (optional, uses default AWS credentials if not set)

# ============================================
# AWS SNS (SMS/Push Notifications)
# ============================================
AWS_SNS_REGION=us-east-1
# AWS_SNS_ACCESS_KEY_ID=your_sns_access_key (optional, uses default AWS credentials if not set)
# AWS_SNS_SECRET_ACCESS_KEY=your_sns_secret_key (optional, uses default AWS credentials if not set)
AWS_SNS_SMS_SENDER_ID=UHealth

# ============================================
# AI/ML SERVICES
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# ============================================
# STORAGE (AWS S3)
# ============================================
AWS_S3_BUCKET=unified-health-storage
AWS_S3_REGION=us-east-1

# ============================================
# FHIR SERVER
# ============================================
FHIR_SERVER_URL=http://localhost:8082/fhir
FHIR_SERVER_VERSION=R4
