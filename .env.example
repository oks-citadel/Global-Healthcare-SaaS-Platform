# ============================================
# UnifiedHealth Platform Environment Variables
# ============================================
# Copy this file to .env and fill in values
# NEVER commit .env to version control

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=1.0.0

# ============================================
# SERVER
# ============================================
PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_MAX=100

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://unified_health:password@localhost:5432/unified_health_dev

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# RATE LIMITING (Redis-backed for distributed systems)
# ============================================
# Enable Redis-backed rate limiting (defaults to true in production)
RATE_LIMIT_REDIS_ENABLED=false
# Rate limit Redis prefix (default: rl:)
# RATE_LIMIT_REDIS_PREFIX=rl:

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# ============================================
# AZURE (Production)
# ============================================
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_TENANT_ID=

# ============================================
# STRIPE (Billing)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ============================================
# TWILIO (Communications)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# ============================================
# SENDGRID (Email)
# ============================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@unifiedhealth.io

# ============================================
# AI/ML SERVICES
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# ============================================
# STORAGE (S3/Azure Blob)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=unified-health-storage

# ============================================
# FHIR SERVER
# ============================================
FHIR_SERVER_URL=http://localhost:8082/fhir
FHIR_SERVER_VERSION=R4
