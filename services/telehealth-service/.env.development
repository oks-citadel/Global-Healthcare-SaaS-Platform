# ==========================================
# Telehealth Service - Development Environment
# ==========================================
# Safe development defaults - DO NOT use in production

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/telehealth_service_dev

# JWT Configuration (for validating tokens from API Gateway)
JWT_SECRET=development-jwt-secret-change-me-min-32-characters-long

# Logging
LOG_LEVEL=info

# WebRTC Configuration (Public STUN for development)
TURN_SERVER_URL=
TURN_USERNAME=
TURN_PASSWORD=
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Video Recording (Disabled for development)
VIDEO_RECORDING_ENABLED=false
RECORDING_STORAGE_BUCKET=
RECORDING_ENCRYPTION_KEY=

# Twilio Video (Optional - leave empty for WebRTC only)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_API_KEY=
TWILIO_API_SECRET=
