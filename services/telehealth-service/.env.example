# ==========================================
# Telehealth Service Environment Variables
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://unified_health:password@localhost:5432/telehealth_service_dev

# JWT Configuration (for validating tokens from API Gateway)
JWT_SECRET=your-super-secret-key-change-in-production

# Logging
LOG_LEVEL=info

# WebRTC Configuration
TURN_SERVER_URL=turn:turn.example.com:3478
TURN_USERNAME=
TURN_PASSWORD=
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Video Recording (Optional)
VIDEO_RECORDING_ENABLED=false
RECORDING_STORAGE_BUCKET=
RECORDING_ENCRYPTION_KEY=

# Twilio Video (Alternative to WebRTC)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_API_KEY=
TWILIO_API_SECRET=
