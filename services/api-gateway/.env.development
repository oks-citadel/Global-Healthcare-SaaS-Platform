# ==========================================
# API Gateway - Development Environment
# ==========================================
# Safe development defaults - DO NOT use in production

# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=development-jwt-secret-change-me-min-32-characters-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for distributed rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info

# Service URLs (Local Development)
AUTH_SERVICE_URL=http://localhost:3001
API_SERVICE_URL=http://localhost:8080
TELEHEALTH_SERVICE_URL=http://localhost:3001
MENTAL_HEALTH_SERVICE_URL=http://localhost:3002
CHRONIC_CARE_SERVICE_URL=http://localhost:3003
PHARMACY_SERVICE_URL=http://localhost:3004
LABORATORY_SERVICE_URL=http://localhost:3005
IMAGING_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
