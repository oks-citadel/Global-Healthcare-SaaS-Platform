# ============================================
# Auth Service - Development Environment
# ============================================
# Safe development defaults - DO NOT use in production

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/auth_db?schema=public

# JWT Configuration (HS256 for development)
JWT_SECRET=development-jwt-secret-change-me-min-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PASSWORD_RESET_EXPIRY_HOURS=1
EMAIL_VERIFICATION_EXPIRY_HOURS=24

# CORS
# Note: Wildcard (*) cannot be used with credentials: true - browsers will reject the response.
# Use comma-separated explicit origins instead.
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Logging
LOG_LEVEL=info

# MFA Configuration
MFA_ISSUER=UnifiedHealthcare-Dev
MFA_ENCRYPTION_KEY=dev-mfa-encryption-key-32-chars-here
