{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/examples",
    "src/jobs",
    "src/tests",
    "src/lib/i18n.ts",
    "src/lib/monitoring-integration.example.ts",
    "src/lib/database-optimization.ts",
    "src/lib/redis-cache.ts",
    "src/lib/push.ts",
    "src/lib/fcm-enhanced.ts",
    "src/lib/tracing.ts",
    "src/lib/database.ts",
    "src/lib/storage.ts",
    "src/lib/stripe-webhook-handler.ts",
    "src/lib/stripe.ts"
  ]
}
