# ==========================================
# API Service - Development Environment
# ==========================================
# Safe development defaults - DO NOT use in production

# Server Configuration
NODE_ENV=development
PORT=8080
API_VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_MAX=100

# JWT Configuration
JWT_SECRET=development-jwt-secret-change-me-min-32-characters-long
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# Database Configuration
DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/unified_health_dev?connection_limit=10&pool_timeout=10&connect_timeout=5&socket_timeout=60
DIRECT_DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/unified_health_dev

# Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=10
DB_CONNECT_TIMEOUT=5
DB_SOCKET_TIMEOUT=60

# Query Settings
DB_QUERY_TIMEOUT=30000
DB_SLOW_QUERY_THRESHOLD=1000

# Retry Settings
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000
DB_RETRY_BACKOFF=2

# Health Check
DB_HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=unified_health_dev
DB_USER=unified_health
BACKUP_DIR=./infrastructure/backups/database
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip

# Cloud Storage for Backups
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_PROVIDER=aws
AWS_S3_BUCKET=unified-health-backups-dev
AWS_S3_REGION=us-east-1

# Backup Notifications
NOTIFICATION_ENABLED=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption Configuration
ENCRYPTION_KEY=dev-encryption-key-32-bytes-here

# AWS Configuration (Use LocalStack for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=development-access-key-change-me
AWS_SECRET_ACCESS_KEY=development-secret-key-change-me
AWS_S3_BUCKET=healthcare-documents-dev
AWS_SECRETS_MANAGER_ENABLED=false

# Storage Configuration
STORAGE_URL=http://localhost:9000
STORAGE_CONTAINER=documents

# Virus Scanning Configuration (ClamAV)
VIRUS_SCAN_ENABLED=false
VIRUS_SCAN_REQUIRED=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=60000
AWS_QUARANTINE_BUCKET=healthcare-quarantine-dev

# Logging Configuration
LOG_LEVEL=info

# Firebase Cloud Messaging (Development - Leave empty or use test project)
FIREBASE_PROJECT_ID=unified-health-dev
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Apple Push Notification Service (Development)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.unifiedhealth.app.dev
APNS_PRODUCTION=false
APNS_PRIVATE_KEY=

# Web Push (VAPID)
VAPID_PUBLIC_KEY=development-vapid-public-key-change-me
VAPID_PRIVATE_KEY=development-vapid-private-key-change-me
VAPID_SUBJECT=mailto:dev@localhost

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=UnifiedHealth Dev <noreply@localhost>

# SMS Configuration (Twilio Test)
TWILIO_ACCOUNT_SID=development_twilio_sid_change_me
TWILIO_AUTH_TOKEN=development_twilio_token_change_me
TWILIO_PHONE_NUMBER=+15005550006

# Stripe Payment Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_development_secret_change_me
STRIPE_PUBLISHABLE_KEY=pk_test_development_publishable_change_me
STRIPE_WEBHOOK_SECRET=whsec_development_webhook_change_me

# Application URLs
APP_URL=http://localhost:3000
SUPPORT_EMAIL=support@localhost
SUPPORT_PHONE=+1-800-000-0000
BILLING_PHONE=+1-800-000-0001
