# ==========================================
# Home Health Service - Development Environment
# ==========================================
# Safe development defaults - DO NOT use in production

# Server Configuration
PORT=3015
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/home_health_db

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GPS/Location Configuration
GEOFENCE_RADIUS_METERS=100
GPS_UPDATE_INTERVAL_MS=30000

# EVV Configuration
EVV_VERIFICATION_ENABLED=true
EVV_SIGNATURE_REQUIRED=true

# Logging
LOG_LEVEL=info
