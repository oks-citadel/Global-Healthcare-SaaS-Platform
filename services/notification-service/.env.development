# ==========================================
# Notification Service - Development Environment
# ==========================================
# Safe development defaults - DO NOT use in production

# Server Configuration
NODE_ENV=development
PORT=3007

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://unified_health:dev_password_change_me@localhost:5432/notification_service_dev

# JWT Configuration (for validating tokens from API Gateway)
JWT_SECRET=development-jwt-secret-change-me-min-32-characters-long

# Logging
LOG_LEVEL=info

# Redis Configuration (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (Use MailHog or similar for local testing)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@localhost
SENDGRID_FROM_NAME=UnifiedHealth Dev

# SMS Configuration (Twilio Test)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+15005550006

# Push Notifications (Firebase - leave empty for development)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Rate Limiting
NOTIFICATION_RATE_LIMIT=100
