# ==========================================
# Notification Service Environment Variables
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3006

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://unified_health:password@localhost:5432/notification_service_dev

# JWT Configuration (for validating tokens from API Gateway)
JWT_SECRET=your-super-secret-key-change-in-production

# Logging
LOG_LEVEL=info

# Redis Configuration (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@unifiedhealth.com
SENDGRID_FROM_NAME=UnifiedHealth

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Rate Limiting
NOTIFICATION_RATE_LIMIT=100
