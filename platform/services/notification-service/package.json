    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@healthcare/shared-lib": "workspace:*",
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "nodemailer": "^6.9.8",
    "twilio": "^4.19.3",
    "firebase-admin": "^12.0.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "prisma": "^5.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
