{
  "name": "@healthcare/notification-service",
  "version": "1.0.0",
  "description": "Email/SMS/Push Notification Service for Global Healthcare Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
