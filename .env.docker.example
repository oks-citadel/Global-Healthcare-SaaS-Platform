# ============================================
# UnifiedHealth Platform - Docker Environment Variables
# Copy this file to .env and update with your values
# ============================================

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
PORT=8080

# ==========================================
# Database Configuration
# ==========================================
DB_PASSWORD=secure_password_change_me
POSTGRES_USER=unified_health
POSTGRES_DB=unified_health_prod

# Database URL (constructed from above)
DATABASE_URL=postgresql://unified_health:${DB_PASSWORD}@postgres:5432/unified_health_prod

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# ==========================================
# MongoDB Configuration
# ==========================================
MONGO_PASSWORD=mongo_secure_password
MONGODB_URI=mongodb://unified_health:${MONGO_PASSWORD}@mongodb:27017/unified_health_fhir

# ==========================================
# Elasticsearch Configuration
# ==========================================
ELASTIC_PASSWORD=elastic_secure_password
ELASTICSEARCH_URL=http://elasticsearch:9200

# ==========================================
# MinIO Configuration
# ==========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_secure_password
MINIO_ENDPOINT=http://minio:9000

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ==========================================
# API Configuration
# ==========================================
API_URL=http://api:8080
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ==========================================
# Next.js Configuration
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=nextauth_secret_change_this

# ==========================================
# Email Configuration (for production)
# ==========================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@unifiedhealth.com

# ==========================================
# Azure Configuration (for production)
# ==========================================
AZURE_STORAGE_ACCOUNT_NAME=unifiedhealthstorage
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=medical-documents

# Azure Container Registry
ACR_SERVICE_PRINCIPAL_ID=your_service_principal_id
ACR_SERVICE_PRINCIPAL_PASSWORD=your_service_principal_password

# ==========================================
# Docker Registry Configuration
# ==========================================
DOCKER_REGISTRY=unifiedhealth.azurecr.io
DOCKER_USERNAME=your_username
DOCKER_PASSWORD=your_password

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# Security Configuration
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FHIR Server Configuration
# ==========================================
FHIR_SERVER_URL=http://hapi-fhir:8080/fhir

# ==========================================
# Build Configuration
# ==========================================
VERSION=1.0.0
BUILD_MODE=prod
GIT_SHA=
GIT_BRANCH=

# ==========================================
# Health Check Configuration
# ==========================================
MAX_RETRIES=30
RETRY_INTERVAL=10

# ==========================================
# Feature Flags
# ==========================================
ENABLE_TELEMETRY=false
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true

# ==========================================
# Development Only (remove in production)
# ==========================================
DEBUG=false
MOCK_EXTERNAL_SERVICES=false
