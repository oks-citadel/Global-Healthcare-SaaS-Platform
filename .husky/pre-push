#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# ============================================
# UnifiedHealth Platform - Pre-push Hook
# Final security checks before pushing to remote
# ============================================

echo "ğŸ”’ Running pre-push security checks..."

# Run full Gitleaks scan on commits being pushed
if command -v gitleaks &> /dev/null; then
    echo "ğŸ” Running full Gitleaks scan..."
    if gitleaks detect --verbose --no-git; then
        echo "âœ… No secrets detected in repository"
    else
        echo "âŒ Secrets detected in repository!"
        echo "Please remove them before pushing."
        exit 1
    fi
else
    echo "âš ï¸  Gitleaks not installed. Skipping secret scan..."
    echo "Install with: brew install gitleaks (macOS) or visit https://github.com/gitleaks/gitleaks"
fi

# Run tests
echo "ğŸ§ª Running tests..."
if pnpm test; then
    echo "âœ… Tests passed"
else
    echo "âŒ Tests failed!"
    echo "Fix failing tests before pushing"
    exit 1
fi

# Run type checking
echo "ğŸ” Running type checks..."
if pnpm typecheck; then
    echo "âœ… Type checks passed"
else
    echo "âŒ Type check failed!"
    exit 1
fi

# Check for dependency vulnerabilities
echo "ğŸ” Checking for vulnerabilities..."
if pnpm audit --audit-level=critical; then
    echo "âœ… No critical vulnerabilities"
else
    echo "âŒ Critical vulnerabilities found!"
    echo "Run 'pnpm audit' to see details"
    echo "Fix critical vulnerabilities before pushing"
    exit 1
fi

echo "âœ… Pre-push security checks passed"
echo "ğŸš€ Safe to push!"
